<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.calculator.MainActivity">


    <EditText
            android:id="@+id/author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="inserisci la data"
            android:inputType="date"
            android:text="DanyJokerFace"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#146DD1"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/operations"
            android:layout_width="0dp"
            android:layout_height="136dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/operations"
            android:textAlignment="center"
            android:textSize="30sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/author" />

    <LinearLayout
            android:id="@+id/linearOperationRow"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/operations">

        <Button
                android:id="@+id/button_reset"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button

                android:id="@+id/button_ic_input_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:icon="@android:drawable/ic_input_delete"
                android:text=""
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />
        <!--TODO -->

        <Button
                android:id="@+id/button_remainder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_division"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearHighestNumberRow"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearOperationRow">

        <Button
                android:id="@+id/button_seven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_eight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_nine"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_multi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="X"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearHighNumberRow"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearHighestNumberRow">

        <Button
                android:id="@+id/button_four"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_five"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_six"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearMiddleNumberRow"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearHighNumberRow">

        <Button
                android:id="@+id/button_one"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_two"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_sum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLowerNumberRor"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearMiddleNumberRow">

        <Button
                android:id="@+id/button_pos_neg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_zero"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_comma"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=","
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />

        <Button
                android:id="@+id/button_equal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textAlignment="center"
                android:textSize="27sp"
                tools:ignore="ButtonStyle" />
    </LinearLayout>

